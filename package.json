{
  "name": "node-red-contrib-homekit-bridged",
  "version": "1.3.0-dev.5",
  "description": "Node-RED nodes to simulate Apple HomeKit devices.",
  "main": "build/homekit.js",
  "scripts": {
    "preinstall": "node build/helper/preinstall.js",
    "build": "yarn clean && tsc",
    "clean": "rimraf build/lib build/**/*.js",
    "test": "yarn build && mocha -r ts-node/register './src/**/*.test.[tj]s' --exit",
    "fix": "eslint --fix \"src/**/*.[tj]s\"",
    "lint": "eslint \"src/**/*.[tj]s\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged"
  },
  "keywords": [
    "homekit",
    "hap-nodejs",
    "node-red",
    "iot",
    "homebridge",
    "home",
    "NRCHKB"
  ],
  "node-red": {
    "nodes": {
      "nrchkb": "build/nrchkb.js",
      "service": "build/service.js",
      "bridge": "build/bridge.js"
    }
  },
  "author": {
    "name": "Shaquu",
    "email": "shaquu.github@gmail.com"
  },
  "contributors": [
    "Marius Schmeding",
    "Oliver Rahner"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged/issues"
  },
  "homepage": "https://github.com/NRCHKB/node-red-contrib-homekit-bridged#readme",
  "dependencies": {
    "debug": "^4.2.0",
    "hap-nodejs": "^0.8.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/mocha": "^8.0.3",
    "@types/node": "^10.17.39",
    "@types/node-red": "^1.1.1",
    "@types/semver": "^7.3.4",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "mocha": "^8.2.0",
    "node-red": "^1.2.2",
    "node-red-node-test-helper": "^0.2.5",
    "prettier": "^2.1.2",
    "semver": "^7.3.2",
    "supports-color": "^7.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "eslint:recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "rules": {
      "prettier/prettier": "off",
      "indent": [
        "error",
        4
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-prototype-builtins": "off",
      "@typescript-eslint/no-this-alias": "off",
      "@typescript-eslint/no-var-requires": "off"
    }
  },
  "prettier": {
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "lf"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=10.22.1"
  },
  "files": [
    "/build",
    "/examples"
  ]
}
